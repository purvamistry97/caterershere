    <body>
        <header class="header-section">
            <div class="header">
                <% if(sessionUser.length === 0){ %>
                    <div class="title">
                        <h2>Caterers Here!<span style="color:#ffcc00">.</span></h2>
                    </div>
                    <div class="GuestcustomerArea">
                        <li class="Customer">
                            <a href='/customerhome' class="link">I am a Customer</a>
                        </li>
                    </div>
                    <div class="GuestcatererArea">
                        <li class="caterer">
                            <a href='/catererhome' class="link">I am a Caterer</a>
                        </li>
                    </div>
                <%}%>
                <% if(sessionUser.length !== 0){%>
                    <div class="title">
                        <h2>Caterers Here!<span style="color:#ffcc00">.</span></h2>
                    </div>
                    
                    <div class="customerArea">
                        <li class="Customer">
                            <a href='/customerhistory' class="link">Dashboard</a>
                        </li>
                        
                    </div>
                    
                    <div class="customer-name">
                            <div class="customer-name-First">
                                <li class="First"><%= userData[0].FirstName%></li>
                            </div>
                            <div class="customer-name-Last">
                                <li class="Last"><%= userData[0].LastName%></li>
                            </div>
                        
                    </div>
                    <div class="logOut">
                        <a class="link" href="/customerhome">Logout</a>
                    </div>
                <%}%>
            </div> 
        </header>
        <div class="Search">
            <form method="POST" action="/" id="searchForm">
                <div class="searchBar">
                    <div style="display:flex">
                        <input type="text" placeholder="Search" name="search" id="searchBar"/>
                       <!--  <div class="searchbtn">
                           
                        </div> -->
                     <input type="submit" class="searchbtn" value="Search"/>
                    </div>
                </div>
                <div class="multipleSelect">
            
                    <select id="catCities" class="js-example-basic-multiple-cities" name="cities" multiple="multiple" placeholder="by cities">
                        <option value="1">Ahmedabad</option>
                        <option value="2">Baroda</option>
                        <option value="3">Anand</option>
                        <option value="4">Nadiad</option>
                        <option value="5">Nadiad</option>
                    </select>
                    <select id="catCuisines" class="js-example-basic-multiple-cuisines" name="cuisines" multiple="multiple" placeholder="by cuisines">
                        <option value="1">Chinese</option>
                        <option value="2">Italian</option>
                        <option value="3">Mexican</option>
                        <option value="4">Continental</option>
                        <option value="5">Punjabi</option>
                    </select>
                    <input type="hidden" id="hidCities" />
                    <input type="hidden" id="hidCuisines" />
                    
                </div>
            </form>
        </div>    
        <div>
            <div class="catererDisplay">
                <% if(caterers.length === 0) {%>
                    <% if(searchedCaterer.length !== 0) {%>
                        <% searchedCaterer.forEach((item, index) => {%> 

                            <div class="catererList">
                                <div class="catererIndividual">
                                    <% var cid = "/catererpage?cid=" +  item.CatererId + "&cname=" + item.Name%>
                                    <a class="link" href=<%=cid%>>
                                        <div class="contents">
                                        
                                            <span id="name"><%= item.Name %></span>
                                            <div>
                                                <!-- <label>Address: &nbsp;&nbsp;</label> --><span><%= item.Address%></span>
                                            </div>
                                            <div>
                                                <!-- <label>Email: &nbsp;&nbsp;</label> --><span><%= item.Email%></span>
                                            </div>
                                            <div>
                                               <!--  <label>Phone: &nbsp;&nbsp;</label> --><span><%= item.Phone1%></span>
                                            </div>
                                              <!-- <%= item.CatererId %> -->
                                        
                                        </div>
                                    </a>
                                </div>
                            </div>
                        <%})%>
                    <%}%>
                <%}%>
            </div>
            <div class="catererDisplay">
                <% if(searchedCaterer.length === 0) {%>
                    <% if(caterers.length !== 0) {%>
                        <% caterers.forEach((item, index) => {%> 
                            
                            <div class="catererList">
                                <div class="catererIndividual">
                                    <% var cid = "/catererpage?cid=" +  item.CatererId + "&cname=" + item.Name%>
                                    <a class="link" href=<%=cid%>>
                                        <div class="contents">
                                        
                                            <span id="name"><%= item.Name %></span>
                                            <div>
                                                <!-- <label>Address: &nbsp;&nbsp;</label> --><span><%= item.Address%></span>
                                            </div>
                                            <div>
                                                <!-- <label>Email: &nbsp;&nbsp;</label> --><span><%= item.Email%></span>
                                            </div>
                                            <div>
                                                <!-- <label>Phone: &nbsp;&nbsp;</label> --><span><%= item.Phone1%></span>
                                            </div>
                                              <!-- <%= item.CatererId %> -->
                                        
                                        </div>
                                    </a>
                                </div>
                            </div>
                        <%})%>
                    <%}%>
                <%}%>
            </div>
        </div>
